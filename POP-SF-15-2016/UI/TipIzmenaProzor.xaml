        <Button x:Name="btnSacuvaj" Content="Sacuvaj" HorizontalAlignment="Left" Margin="97,124,0,0" VerticalAlignment="Top" Width="97" Height="26" Click="btnSacuvaj_Click"/>

    </Grid>
</Window>
